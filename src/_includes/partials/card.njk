{% macro card(post) %}
    <div class="post-card-container">
        <header class="post-card-header">
            <div class="post-card-tags">
                {% if post.tags %}{% for tag in post.tags %}<a class="post-card-tag" href="{{ site.url}}tag/{{ tag.name }}">{{ tag.name }}</a>{% endfor %}{% endif %}
            </div>
            <a class="post-card{% if post.featured %}  post-card-featured{% endif %}" href="{{ post.url }}">
                <h2 class="post-card-title">
                    {{ post.title }}
                </h2>
            </a>
        </header>
        <a class="post-card{% if post.featured %}  post-card-featured{% endif %}" href="{{ post.url }}">
            <div class="post-card-excerpt">
                <p>{{ post.excerpt }}</p>
            </div>
            <footer class="post-card-footer">
                <div class="post-card-footer-right">
                    <div>{{ post.html | safe | getReadingTime }} min read</div>
                </div>
            </footer>
        </a>
    </div>
{% endmacro %}
